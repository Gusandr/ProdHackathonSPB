<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2B2B2B">

    <!-- Верхняя панель администратора -->
    <LinearLayout
        android:id="@+id/adminHeaderPanel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/adminHeaderTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:fontFamily="@font/montserrat_medium"
            android:text="Добрый день"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/adminHeaderAvatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="0"
            app:srcCompat="@drawable/icon_logotype_alex_meme" />
    </LinearLayout>

    <!-- Основная скроллируемая область с контентом -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/adminHeaderPanel">

        <LinearLayout
            android:id="@+id/adminContentContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Карточка используемых GPU ресурсов -->
            <include layout="@layout/fragment_gpu_in_usage_main_menu"/>

            <!-- Заголовок группы карточек -->
            <TextView
                android:id="@+id/groupCardsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_medium"
                android:layout_marginHorizontal="25dp"
                android:layout_marginVertical="15dp"
                android:text="Карточки по группам"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <!-- Горизонтальный список карточек на RecyclerView -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/groupCardsRecycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:overScrollMode="never"
                android:clipToPadding="false"
                android:paddingStart="20dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/fragment_group_card_main_menu"
                tools:itemCount="4" />

            <!-- Карточка быстрых ссылок -->
            <FrameLayout
                android:id="@+id/quickAccessMainFrame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/fragment_card_for_main_menu">

                <LinearLayout
                    android:id="@+id/quickAccessLinksContainer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginVertical="20dp"
                    android:layout_marginHorizontal="25dp">

                    <!-- Кнопка: Все группы -->
                    <LinearLayout
                        android:id="@+id/quickAccessGroupsButton"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:id="@+id/quickAccessGroupsIcon"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_weight="0"
                            app:srcCompat="@drawable/icon_user_group" />

                        <LinearLayout
                            android:id="@+id/quickAccessGroupsTextContainer"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="3"
                            android:orientation="vertical"
                            android:layout_marginStart="10dp"
                            android:gravity="center_vertical">

                            <TextView
                                android:id="@+id/quickAccessGroupsTitle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/montserrat_medium"
                                android:text="Группы"
                                android:textSize="15sp"
                                android:textColor="@color/white" />

                            <TextView
                                android:id="@+id/quickAccessGroupsSubtitle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/montserrat_light"
                                android:text="Список всех групп"
                                android:textSize="13sp"
                                android:textColor="@color/white" />
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/quickAccessGroupsArrow"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_weight="0"
                            app:srcCompat="@drawable/icon_arrow_to_the_right" />
                    </LinearLayout>
                </LinearLayout>
            </FrameLayout>

            <!-- Предупреждение -->
            <include layout="@layout/fragment_warning_main_menu_admin"/>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
